{
    "buildCommand": "npm run build",
    "outputDirectory": "dist",
    "functions": {
        "api/sync-folders-cron.js": {
            "maxDuration": 60
        },
        "api/sync/bc-audit.js": {
            "maxDuration": 300
        },
        "api/sync/bc-queue-cron.js": {
            "maxDuration": 300
        }
    },
    "crons": [
        {
            "path": "/api/sync-folders-cron?cronSecret=YOUR_CRON_SECRET",
            "schedule": "0 9 * * *"
        },
        {
            "path": "/api/sync/bc-subscriptions/renew?forceRecreate=1&cronSecret=YOUR_CRON_SECRET",
            "schedule": "0 0 * * *"
        },
        {
            "path": "/api/sync/bc-audit",
            "schedule": "0 8 * * *"
        },
        {
            "path": "/api/sync/auto?cronSecret=YOUR_CRON_SECRET",
            "schedule": "*/10 * * * *"
        },
        {
            "path": "/api/sync/clear-operation-sets?olderThanMinutes=30&limit=250",
            "schedule": "0 * * * *"
        },
        {
            "path": "/api/sync/bc-queue-cron?cronSecret=YOUR_CRON_SECRET",
            "schedule": "*/5 * * * *"
        }
    ],
    "headers": [
        {
            "source": "/api/(.*)",
            "headers": [
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "*"
                },
                {
                    "key": "Access-Control-Allow-Methods",
                    "value": "GET, POST, PUT, DELETE, OPTIONS"
                },
                {
                    "key": "Access-Control-Allow-Headers",
                    "value": "Content-Type, Authorization, x-api-key"
                }
            ]
        }
    ]
}
