{
    "buildCommand": "npm run build",
    "outputDirectory": "dist",
    "functions": {
        "api/sync-folders-cron.js": {
            "maxDuration": 60
        }
    },
    "crons": [
        {
            "path": "/api/sync-folders-cron?cronSecret=YOUR_CRON_SECRET",
            "schedule": "0 9 * * *"
        },
        {
            "path": "/api/sync/bc-subscriptions/renew?cronSecret=YOUR_CRON_SECRET",
            "schedule": "0 7 * * *"
        },
        {
            "path": "/api/sync/bc-jobs/process?cronSecret=YOUR_CRON_SECRET",
            "schedule": "*/2 * * * *"
        },
        {
            "path": "/api/sync/premium-change/poll?cronSecret=YOUR_CRON_SECRET",
            "schedule": "*/5 * * * *"
        },
        {
            "path": "/api/sync/bc-to-premium?cronSecret=YOUR_CRON_SECRET",
            "schedule": "*/15 * * * *"
        }
    ],
    "headers": [
        {
            "source": "/api/(.*)",
            "headers": [
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "*"
                },
                {
                    "key": "Access-Control-Allow-Methods",
                    "value": "GET, POST, PUT, DELETE, OPTIONS"
                },
                {
                    "key": "Access-Control-Allow-Headers",
                    "value": "Content-Type, Authorization, x-api-key"
                }
            ]
        }
    ]
}
